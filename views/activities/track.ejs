<% include ../partials/header %>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.21.0/moment.min.js" type="text/javascript"></script>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.0-alpha18/js/tempusdominus-bootstrap-4.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.0-alpha18/css/tempusdominus-bootstrap-4.min.css" />


<div class="container">
    <div class="row justify-content-center">
        <h1>Track an activity</h1>
    </div>
    <div class="row">
        <div style="width: 40%; margin: 30px auto; ">
            <form action="/activities/track" method="POST">
                <div class="form-group">
                    <select class="form-control" type="text" name="activity" placeholder="Choose activity">
                        <% activities.forEach(function(activity){ %>
                            <option value="<% activity.id %>"><%= activity.category %>:<%= activity.title %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <div class="input-group date datetimepicker" id="datetimepicker_start" data-target-input="nearest">
                        <input type="text" class="form-control datetimepicker-input" data-target="#datetimepicker_start" placeholder="Then should tracking start?" name="startDate"/>
                        <div class="input-group-append" data-target="#datetimepicker_start" data-toggle="datetimepicker">
                            <div class="input-group-text"><i class="far fa-calendar-alt"></i></div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group date datetimepicker" id="datetimepicker_end" data-target-input="nearest">
                        <input type="text" class="form-control datetimepicker-input" data-target="#datetimepicker_end" placeholder="When should tracking end?" name="endDate" />
                        <div class="input-group-append" data-target="#datetimepicker_end" data-toggle="datetimepicker">
                            <div class="input-group-text"><i class="far fa-calendar-alt"></i></div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <button class="btn btn-md btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/journalentries">Go back</a>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $(".datetimepicker").datetimepicker({
            format:"DD/MM/YYYY"
        });
    });
</script>

<% include ../partials/footer %>