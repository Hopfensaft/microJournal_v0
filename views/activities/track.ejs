<% include ../partials/header %>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">


<div class="container">
    <div class="row justify-content-center">
        <h1>Create a new activity</h1>
    </div>
    <div class="row">
        <div style="width: 40%; margin: 30px auto; ">
            <form action="/activities/new" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="activity" placeholder="Choose activity">
                </div>
                <div class="form-group">
                    <div class="input-group date datetimepicker" id="datetimepicker_start" data-target-input="nearest">
                        <input type="text" class="form-control datetimepicker-input" data-target="#datetimepicker_start" placeholder="Then should tracking start?" name="start"/>
                        <div class="input-group-append" data-target="#datetimepicker_start" data-toggle="datetimepicker">
                            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group date datetimepicker" id="datetimepicker_end" data-target-input="nearest">
                        <input type="text" class="form-control datetimepicker-input" data-target="#datetimepicker_end" placeholder="When should tracking end?" name="end" />
                        <div class="input-group-append" data-target="#datetimepicker_end" data-toggle="datetimepicker">
                            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <button class="btn btn-md btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/journalentries">Go back</a>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $('.datetimepicker').datetimepicker({
            format:'LT'
        });
    });
</script>

