<% include ../partials/header %>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">


<div class="container">
    <div class="row justify-content-center">
        <h1>Create a new activity</h1>
    </div>
    <div class="row">
        <div style="width: 40%; margin: 30px auto; ">
            <form action="/activities/new" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="title" placeholder="Title" maxlength="20">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="Description" maxlength="45">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="category" placeholder="Category" maxlength="20">
                </div>
                <div class="form-group">
                    <button class="btn btn-md btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/journalentries">Go back</a>
        </div>
    </div>
</div>

