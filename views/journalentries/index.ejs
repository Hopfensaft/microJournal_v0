<% include ../partials/header %>

<div class = container>
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to MicroJournal!</h1>
            <p>The quick and easy way to stick to a daily journaling routine</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/journalentries/new">Add new entry for today</a>
            </p>
        </div>    
    </header>

    <div class="row" style="display:flex; flex-wrap: wrap;">
        <% journalentries.forEach(function(journalentry){ %>
            <div class="d-inline-flex flex-column">
                <div>&nbsp;</div>
                <div class="d-inline-flex align-items-end" style="width: 1px; margin: 0;" id="middle-column"><div id="day_num">#<%= journalentry.day_number %></div></div>
                <div>&nbsp;</div>
            </div>
            <div class="d-inline-flex flex-column justify-content-between">
                <div>Special</div>
                <div class="card" id="middle-column">
                    <div class="d-inline-flex flex-column justify-content-between align-items-center" style="height: 100%;">
                        <div><button type="button" class="btn btn-primary btn-circle align-self-center" id="activity_button"><i class="fas fa-plus"></i></button></div>
                        <div class="d-inline-flex justify-content-between flex-grow-1 align-items-center">
                            <div><button type="button" class="btn btn-primary btn-circle" id="activity_button"><i class="fas fa-plus"></i></button></div>
                            <h4 class="self-align-center" style="text-align: center; border: 1px solid rgba(0,0,0,.125);"><%= journalentry.memento %> </h4>
                            <div><button type="button" class="btn btn-primary btn-circle" id="activity_button"><i class="fas fa-plus"></i></button></div>
                        </div>
                        <div><button type="button" class="btn btn-primary btn-circle align-self-center" id="activity_button"><i class="fas fa-plus"></i></button></div>
                    </div>
                </div>
                <div class="d-inline-flex justify-content-between align-items-center" id="main-item">
                    <div>
                        <button type="button" class="btn btn-primary" id="wake_button">
                            <i class="fas fa-lg fa-bell" data-toggle="tooltip" data-placement="top" title="Time you woke up"></i>
                        </button> 06:00
                    </div>
                    <div style="text-align: center;">
                        <button type="button" class="btn btn-primary" id="wake_button">
                            <i class="far fa-4x fa-smile-beam" data-toggle="tooltip" data-placement="top" title="How did you feel today"></i>
                        </button>
                    </div>
                    <div style="text-align: right;"> 
                        <button type="button" class="btn btn-primary" id="wake_button">
                            <i class="fas fa-lg fa-bed" data-toggle="tooltip" data-placement="top" title="Time you went to sleep"></i>
                        </button> 23:00
                    </div>
                </div>
            </div>
            <div>
                <div class="d-inline-flex flex-column">
                    <button type="button" class="btn btn-primary btn-circle" id="add-stuff"><i class="fas fa-plus"></i></button>
                    <button type="button" class="btn btn-outline-primary" id="add-stuff"><i class="fab fa-untappd"></i></button>
                </div>
            </div>
            
        <% }); %>
            
    </div>
</div>

<% include ../partials/footer %>