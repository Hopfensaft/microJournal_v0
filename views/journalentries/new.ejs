<% include ../partials/header %>

<div class="container">
    <div class="row justify-content-center">
        <h1>Create a new journal entry</h1>
    </div>
    <div class="row">
        <div style="width: 30%; margin: 30px auto; ">
            <form action="/journalentries" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="memento" placeholder="Most important thing to remember about today">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="special" placeholder="Any special circumstances? (travel,...)">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="asleep" placeholder="When did you wake up?">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="awake" placeholder="When did you go to bed?">
                </div>
                <div class="form-group">
                    <button class="btn btn-md btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/journalentries">Go back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>